{
  "name": "armoghan-blogs",
  "version": "1.0.0",
  "description": "Personal blog built with Hugo and Decap-CMS using the Blowfish theme.",
  "private": "true",
  "scripts": {
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "npx lint-staged",
    "commit": "cz",
    "audit": "npm audit",
    "audit:fix": "npm audit --fix",
    "update": "npm update",
    "depcheck": "npx depcheck",
    "cache-clean": "npm cache clean --force",
    "rebuild-node-modules": "rm -rf node_modules && npm install",
    "prepare": "husky"
  },
  "keywords": [
    "Hugo",
    "Blowfish Theme",
    "Armoghan Blogs",
    "Decap CMS",
    "Personal Blog",
    "Web Development",
    "Static Site Generator",
    "CMS",
    "Tailwind CSS"
  ],
  "browserslist": [
    "last 2 versions",
    "not dead",
    "Chrome >= 80",
    "Firefox >= 80",
    "Safari >= 12"
  ],
  "engines": {
    "node": ">=20.15.1",
    "npm": ">=10.8.0",
    "go": ">=1.22.9",
    "hugo": ">=0.125.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.yaml": [
      "prettier --write"
    ],
    "*.toml": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && npx git-cz --hook || true",
      "commit-msg": "npx commitlint --edit $1 "
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.15.0",
    "commitizen": "^4.3.1",
    "commitlint": "^19.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.15.0",
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-go-template": "^0.0.15"
  },
  "author": "Armoghan-ul-Mohmin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Armoghan-Blogs/Blogs.git"
  },
  "bugs": {
    "url": "https://github.com/Armoghan-Blogs/Blogs/issues"
  },
  "homepage": "https://github.com/Armoghan-Blogs/Blogs#readme"
}
